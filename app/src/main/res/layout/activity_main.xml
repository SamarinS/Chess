<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/game_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textSize="20dp"/>

    <TableLayout
        android:id="@+id/table_chessboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"></TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отменить ход"
            android:id="@+id/unmakeMoveButton"
            android:layout_weight="1"
            android:layout_margin="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="История ходов"
            android:id="@+id/showMoveHistoryButton"
            android:layout_weight="1"
            android:layout_margin="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сохранить игру"
            android:id="@+id/saveGameButton"
            android:layout_weight="1"
            android:layout_margin="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Загрузить игру"
            android:id="@+id/loadGameButton"
            android:layout_weight="1"
            android:layout_margin="1dp" />

    </LinearLayout>


</LinearLayout>
