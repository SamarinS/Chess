<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.samarin.chess" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/black_square_white_knight"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoadGameActivity"
            android:label="@string/title_activity_load_game" >
        </activity>
        <activity
            android:name=".SaveGameActivity"
            android:label="@string/title_activity_save_game" >
        </activity>
    </application>

</manifest>
